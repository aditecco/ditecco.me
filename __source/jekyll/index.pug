//- page start
//- ---------------------------------
doctype
html
	head
		| {% include dtc-common-meta %}
		//- work sans as main font?
		link(href='https://fonts.googleapis.com/css?family=Montserrat:400|Roboto:400', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="/css/dtc-home-main.css")
		include dtc-ga-snp.html
	body
