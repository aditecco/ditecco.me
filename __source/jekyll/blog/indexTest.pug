---
title: ditecco.me/blog/
---

doctype
html
	head
		| {% include dtc-common-meta %}
		//- link(href='http://fonts.googleapis.com/css?family=Montserrat|Roboto|Trocchi', rel='stylesheet', type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Montserrat|Roboto', rel='stylesheet', type='text/css')
		link(rel="stylesheet", href="/blog/css/dtc-blog-main.css")
	body
		nav.index-nav
			ul
				li
					a(href="/index.html") &#8592; Back
		main
			section
				.index-hero
					h1 {{ page.title }}
			section
				ul.index-item-list
				{% for blogPost in site.posts %}
					li.index-item
						a(href='{{ blogPost.url }}')
							article.index-item-inner
								span.index-item-timestamp {{ blogPost.timestamp }}
								h3.index-item-title {{ blogPost.title }}
								span.index-item-tag {{ blogPost.taxonomy }}
				{% endfor %}
		footer.index-footer
			small | {% include dtc-common-footer %}
